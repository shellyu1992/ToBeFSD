page {
  height: 100%;
  background-color: #eee;
}
.myOrder-wrap {
  height: 100%;
}
.myOrder-content-container {
  height: 100%;
}
.myOrder-tab-list {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  /*line-height: 1.9375rem;*/
  line-height: 75rpx;
  height: 79rpx;
  background: #fff;
  text-align: center;
}
.myOrder-tab-list view {
  /*border-bottom: 0.0625rem solid transparent;*/
  border-bottom: 1px solid transparent;
}
.myOrder-tab-list view.active {
  color: #d20e10;
  border-color: #d20e10;
}
.myOrder-pay-price {
  color: #d20e10;
}
.myOrder-list-wrap {
  padding: 0 0.625rem;
  margin-bottom: 0.4375rem;
  background-color: #fff;
}
.myOrder-goods-cover {
  position: absolute;
  left: 0;
  width: 3.125rem;
  height: 3.125rem;
}
.myOrder-goods-title {
  padding: 0 4.5625rem 0 3.9375rem;
  height: 3.125rem;
  font-size: 0.75rem;
  overflow: hidden;
}
.myOrder-goods-right {
  position: absolute;
  top: 0.625rem;
  right: 0;
  max-width: 4.5625rem;
  line-height: 1.25rem;
  text-align: right;
}
.myOrder-list-bottom {
  text-align: right;
  line-height: 2rem;
  padding: 0.4375rem 0;
}
.myOrder-list-bottom .btn {
  padding: 0.1875rem 0.5rem;
  margin-right: 0.625rem;
}
.myOrder-list-bottom .btn:last-child {
  margin-right:0;
}
.myOrder-list-count {
  margin-right: 0.9375rem;
}
.noMoreNewDataTip {
  text-align: center;
  color: #aaa;
  line-height: 30px;
  margin-bottom: 10px;
}
.scrollContainer {
  height: 100%;
}
